<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GalleryActivity"
    android:background="@color/text_and_icon">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/gallery_gridview"
              android:numColumns="3"
              android:layout_marginBottom="80dp">
    </GridView>

    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/primary">

        <ImageButton
            android:id="@+id/gallery_picture"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/photo_camera"
            android:scaleType="centerInside"
            android:background="@color/primary"
            android:padding="10dp"/>

        <ImageButton
            android:id="@+id/gallery_menu"
            android:contentDescription="@string/description_info"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:padding="20dp"
            android:src="@drawable/ic_dehaze_black_48dp" />

        <ImageButton
            android:id="@+id/cloud_gallery"
            android:contentDescription="@string/description_info"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:padding="20dp"
            android:src="@drawable/ic_cloud_black_48dp" />

    </FrameLayout>

</RelativeLayout>
